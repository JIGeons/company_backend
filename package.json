{
  "name": "company_backend",
  "version": "1.0.0",
  "scripts": {
    "dev": "nodemon index.js",
    "local": "ts-node -r tsconfig-paths/register --transpile-only src/server.ts",
    "start": "node -r tsconfig-paths/register dist/src/server.js",
    "start:local": "cross-env NODE_ENV=dev nodemon",
    "start:test": "cross-env NODE_ENV=test nodemon",
    "start:prod": "cross-env NODE_ENV=prod nodemon",
    "test": "cross-env jest",
    "test:unit": "cross-env UNIT_TEST=true jest tests/unit",
    "test:recent": "jest --onlyChanged",
    "test:watch": "jest --watch",
    "docker:build": "docker build -t jiseong98/abc-backend:1.0.0 .",
    "docker:test:up": "docker-compose -f docker-compose.test.yml up -d",
    "docker:test:down": "docker-compose -f docker-compose.test.yml down -v",
    "docker:dev:up": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down -v",
    "docker:prod:up": "docker-compose -f docker-compose.yml --env-file .env.prod up -d",
    "docker:prod:down": "docker-compose -f docker-compose.yml down -v",
    "build": "rm -rf dist && tsc -p . && tsc-alias",
    "build:prod": "rm -rf dist && tsc -p . && tsc-alias"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.775.0",
    "@types/node": "^22.13.14",
    "axios": "^1.8.3",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "marked": "^15.0.7",
    "mongoose": "^8.12.1",
    "multer": "^1.4.5-lts.2",
    "mysql2": "^3.14.1",
    "nodemailer": "^6.10.1",
    "nodemon": "^3.1.9",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.22",
    "typescript": "^5.8.2",
    "uuid": "^11.1.0",
    "webpack-node-externals": "^3.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/module-alias": "^2.0.4",
    "@types/multer": "^1.4.12",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "module-alias": "^2.2.3",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.1",
    "tsc-alias": "^1.8.13",
    "tsconfig-paths": "^4.2.0",
    "webpack-cli": "^6.0.1"
  }
}
